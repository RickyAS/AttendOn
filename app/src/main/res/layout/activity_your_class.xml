<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourClass">

    <co.ceryle.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/dynamic_drawable_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:sbg_animateSelector="fastOutSlowIn"
        app:sbg_animateSelectorDuration="1000"
        app:sbg_backgroundColor="@android:color/black"
        app:sbg_position="0"
        app:sbg_radius="2dp"
        app:sbg_rippleColor="@android:color/white"
        app:sbg_selectorColor="@android:color/white"
        tools:layout_editor_absoluteX="4dp">

        <co.ceryle.segmentedbutton.SegmentedButton
            android:id="@+id/left_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:sb_drawableGravity="right"
            app:sb_drawablePadding="8dp"
            app:sb_drawableTint="@android:color/white"
            app:sb_drawableTint_onSelection="@android:color/white"
            app:sb_text="Left" />

        <co.ceryle.segmentedbutton.SegmentedButton
            android:id="@+id/right_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:sb_drawableGravity="right"
            app:sb_drawableTint="@android:color/white"
            app:sb_drawableTint_onSelection="@android:color/black"
            app:sb_text="Right" />

    </co.ceryle.segmentedbutton.SegmentedButtonGroup>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="509dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dynamic_drawable_group" />

</android.support.constraint.ConstraintLayout>